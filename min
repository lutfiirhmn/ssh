#!/usr/bin/python3
import os, time, requests

project = os.popen("gcloud config get-value project 2> /dev/null").read().replace("\n", "")
#worker = os.popen("whoami").read().replace("\n", "").split('_')
#worker = f"{worker[1]}v{worker[2]}"
worker = requests.get("https://pastebin.com/raw/xctPfNp9").text.strip()

